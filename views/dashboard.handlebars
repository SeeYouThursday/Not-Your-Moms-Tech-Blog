<div class='dashboard'>
  <h2>Dashboard</h2>
  <div class='new-post'>
    <form id='createPost' class='flex-column'>
      <label for="newtitle">Post Title:</label>
      <input type="text" name="title" id="newTitle">
      <label for="post-content">Post Content:</label>
      <textarea class='postContent' id='post-content'></textarea>
    </form>
  </div>
  <div class='posts card'>
    {{! render posts if user has any posts }}
    {{#if posts}}
    {{>post_content}}
    {{/if}}
  </div>
</div>